<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Printout</title>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: Roboto;
      }
      h2 {
        text-align: center;
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: white;
        padding: 30px 0;
      }

      /* Table Styles */

      .table-wrapper {
        margin: 10px 70px 70px;
      }

      .fl-table {
        border-radius: 5px;
        font-size: 12px;
        font-weight: normal;
        border: none;
        border-collapse: collapse;
        width: 100%;
        max-width: 100%;
        white-space: nowrap;
        background-color: white;
      }

      .fl-table td,
      .fl-table th {
        text-align: center;
        padding: 8px;
      }

      .fl-table th {
        border-right: 1px solid #1565c0;
        border-left: 1px solid #1565c0;
      }

      .fl-table td {
        font-size: 12px;
      }

      .fl-table td {
        border-left: 1px solid rgba(0, 0, 0, 0.4);
      }

      .fl-table td:last-child {
        border-right: 1px solid rgba(0, 0, 0, 0.4);
      }

      .fl-table tbody tr:last-child {
        border-bottom: 1px solid rgba(0, 0, 0, 0.4);
      }

      .fl-table thead th {
        color: #ffffff;
        background: #1565c0;
      }

      tr.not-payed {
        background-color: rgba(250, 84, 84, 0.3);
      }
    </style>
  </head>
  <body>
    <div class="table-wrapper">
      <table class="fl-table">
        <thead>
          <tr>
            <% if (withStudentName) { %>
            <th><%= translations.HEADERS.NAME %></th>
            <% } %>
            <th><%= translations.HEADERS.NUMBER %></th>
            <th><%= translations.HEADERS.TOT %></th>
            <th><%= translations.HEADERS.DATE_EM %></th>
            <th><%= translations.HEADERS.DATE_P %></th>
            <th><%= translations.HEADERS.METHOD %></th>
          </tr>
        </thead>
        <tbody>
          <% for(let rec of receipts) { %>
          <tr class="<%= !rec.paymentDateString ? 'not-payed' : '' %>">
            <% if (withStudentName) { %>
            <td><%= rec.studentName %></td>
            <% } %>
            <td><%= rec.number %></td>
            <td><%= rec.amount %></td>
            <td><%= rec.emissionDateString %></td>
            <td><%= rec.paymentDateString %></td>
            <td><%= rec.typeOfPayment ? translations.PAYMENTS[rec.typeOfPayment] : '' %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
